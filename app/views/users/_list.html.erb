<div class="container">
	<div class="row">
	<div class="col-lg-3" style="background-color:orange;">
	<h1>user info</h1>
	<div>
		<%=link_to user_path(user.id) do %>
			<%= attachment_image_tag user,:profile_image, :fill,60,60, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg" %>
		<% end %>
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%=user.name%></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%=user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div>
		<% if user.id == current_user.id %>
		<%=link_to "edit" ,edit_user_path(user.id) %>
		<% else %>
		<%= link_to "edit", user_path(current_user) %>
		<%end%>
	</div>
	<%= form_for(user) do |f| %>
	<% end %>
	<div>newbook</div>
</div>