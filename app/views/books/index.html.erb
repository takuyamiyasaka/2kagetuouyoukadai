<%=render "users/list",book: @book %>
	<div class="row">
	<div class="col-lg-3">
	<h1>User info</h1>
	<div>
		<%=link_to user_path(@user.id) do %>
			<%= attachment_image_tag @user,:profile_image, :fill,60,60, class: " pull-left profile-thumb",fallback: "no_image.jpg" %>
		<% end %>
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%=@user.name%></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%=@user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row ">
		<% if @user.id == current_user.id %>
			<%=link_to edit_user_path(@user.id) do %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></i>
			<% end %>
		<% else %>
			<%= link_to user_path(current_user) do  %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></i>
			<% end %>
		<% end %>
	</div>
	<div class="row">
	<%= form_for(@book) do |f| %>
	<h2>Newbook</h2>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Opinion</h4>
	<%= f.text_area :body %>
	<p><%= f.submit "Create Book",class:"btn btn-primary" %></p>
	<% end %>
</div>
</div>
	<div class="col-lg-9">
		<h1>Books</h1>
		<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<span>
				<%=link_to user_path(book.user.id) do %>
				<%= attachment_image_tag book.user,:profile_image, :fill,20,20, class: " pull-left profile-thumb",fallback: "no_image.jpg", :width =>"20", :height =>"20" %>
				<% end %>
				</span>
			</td>
			<td>
				<%=link_to book.title, book_path(book.id) %>
			</td>
			<td>
				<%=book.body %>
			</td>
			<% end %>
		</tr>
	</tbody>
</table>
</div>
</div>
</div>

