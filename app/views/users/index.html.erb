<%=render "users/list",book: @book %>
<div class="container">
	<div class="row">
		<div class="col-lg-3">
		<h1>User info</h1>
		<div>
		<%= attachment_image_tag @user,:profile_image, :fill,60,60, class: " pull-left profile-thumb",fallback: "no_image.jpg" %>
		</div>
		<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%=@user.name%></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%=@user.introduction %></th>
			</tr>
		</tbody>
		</table>
		<div class="row ">
		<% if @user.id == current_user.id %>
			<%=link_to edit_user_path(@user.id) do %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></i>
			<% end %>
		<% else %>
			<%= link_to user_path(current_user) do  %>
				<i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></i>
			<% end %>
		<% end %>
		</div>

		<%= form_for(@book) do |f| %>
		<h2>Newbook</h2>
		<h4>Title</h4>
		<p><%= f.text_field :title %></p>
		<h4>Opinion</h4>
		<%= f.text_area :body %>
		<p>
		<%= f.submit "Create Book", class:"btn btn-primary" %></p>
		<% end %>
	</div>
	<div class="col-lg-9">
	<h1>Users</h1>
	<table class="table">
		<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= attachment_image_tag user,:profile_image, :fill,20,20,class: " pull-left profile-thumb",fallback: "no_image.jpg", :width => "20", :height => "20" %>
			</td>
			<td>
				<span><%= user.name %></span>
			</td>
			<td>
				<%=link_to "Show",user_path(user.id)%>
			</td>
		</tr>
	</tbody>
		<% end %>
	</table>
	</div>
</div>
</div>