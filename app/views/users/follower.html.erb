<table class="table">
		<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<%= attachment_image_tag user,:profile_image, :fill,20,20,class: " pull-left profile-thumb",fallback: "no_image.jpg", :width => "20", :height => "20" %>
			</td>
			<td>
				<span><%= user.name %></span>
			</td>
			<td>
				フォロー数：<%= user.followings.count %>
			</td>
			<td>
				フォロワー数：<%= user.followers.count %>
			</td>
			<td>
				<%= render "relationships/follow_button" ,user: user %>
			</td>
			<td>
				<%=link_to "Show",user_path(user.id)%>
			</td>
		</tr>
	</tbody>
		<% end %>
	</table>
