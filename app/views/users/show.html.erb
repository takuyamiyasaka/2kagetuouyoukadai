<p class="notice"><%= flash[:notice] %></p>
<% if @book.errors.any? %>
	<div class="alert alert-warning">
	<h2><%= @book.errors.count %></h2>
		<ul>
			<% @book.errors.full_messages.each do |message|%>
				<li><%= message %></li>
				<%end%>
		</ul>
	</div>
<%end%>
<div class="container">
	<div class="row">
	<div class="col-lg-3" style="background-color:orange;">
	<h1>user info</h1>
	<div>
		<%=link_to user_path(@user.id) do %>
			<%= attachment_image_tag @user,:profile_image, :fill,60,60, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg" %>
		<% end %>
	</div>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%=@user.name%></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%=@user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div>
		<% if @user.id == current_user.id %>
		<%=link_to edit_user_path(@user.id) do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
				<% else %>
				<%= link_to user_path(current_user) do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
		<%end%>
	</div>
	<%= form_for(@book) do |f| %>
	<div>newbook</div>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<%= f.submit "Create Book" %>
	<% end %>
</div>
	<div class="col-lg-9">
		<h1>Books</h1>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%=link_to user_path(@user.id) do %>
				<%= attachment_image_tag @user,:profile_image, :fill,10,10, class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg" %>
				<% end %>
			</td>
			<td>
				<%= link_to book.title , book_path(book.id) %>
			</td>
			<td>
				<%=book.body %>
			</td>
		</tr>
	    <% end %>
	</tbody>
</table>
	</div>
</div>
</div>

