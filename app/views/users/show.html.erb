<%=render "users/list",book: @book ,user: @user%>
	<div class="col-lg-9">
		<h1>Books</h1>
	<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%=render "users/user",user:@user%>
			</td>
			<td>
				<%= link_to book.title , book_path(book.id) %>
			</td>
			<td>
				<%=book.body %>
			</td>
			<td>
				<i class="fa fa-comment"></i>
				<%= book.post_comments.count %>
			</td>
		</tr>
	    <% end %>
	</tbody>
</table>
	</div>
</div>
</div>

